<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book.id) %></td>
        <td><a class="edit_242201" href="/books/242201/edit">Edit</a></td>
        <td><a data-confirm="Are you sure?" class="destroy_242201" rel="nofollow" data-method="delete" href="/books/242201">Destroy</a></td>
      </tr>
    <% end %>
  </tbody>
</table>


<h2>New book</h2>
<%= form_with model:@book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit "Create Book" %>
<% end %>
